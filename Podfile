  pod 'MarqueeLabel'

  target 'SmartTouristTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SmartTouristUITests' do
    # Pods for testing
  end

end

target 'PictureNotification' do
  use_frameworks!
  pod 'PinLayout'
end

target 'SmartTouristAppleWatch' do
  use_frameworks!
  pod 'GoogleMaps'
end
